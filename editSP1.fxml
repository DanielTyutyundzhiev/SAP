<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.editSP1Controller">
    <children>
        <TableView fx:id="table" layoutX="213.0" prefHeight="257.0" prefWidth="512.0" style="-fx-background-color: F88C75;">
            <columns>
                <TableColumn fx:id="col_id" prefWidth="42.0" text="id" />
                <TableColumn fx:id="col_firstName" prefWidth="105.0" text="First Name" />
                <TableColumn fx:id="col_lastName" prefWidth="116.0" text="Last Name" />
                <TableColumn fx:id="col_UserName" prefWidth="123.0" text="Username" />
            <TableColumn fx:id="col_Password" prefWidth="123.0" text="Password" />
            </columns>
        </TableView>
        <Label layoutX="27.0" layoutY="138.0" text="Enter a user id you would like " />
        <Label layoutX="28.0" layoutY="162.0" text="to edit from the database:" />
        <TextField fx:id="idField" layoutX="32.0" layoutY="188.0" />
        <Button fx:id="editButton" layoutX="28.0" layoutY="257.0" mnemonicParsing="false" onAction="#editSPonAction" prefHeight="30.0" prefWidth="157.0" style="-fx-background-color: F88C75;" text="Edit" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Label fx:id="deleteMessage" layoutX="28.0" layoutY="333.0" prefHeight="17.0" prefWidth="157.0" />
        <Button fx:id="updateTableButt" layoutX="27.0" layoutY="219.0" mnemonicParsing="false" onAction="#updateTable" prefHeight="25.0" prefWidth="159.0" style="-fx-background-color: F88C75;" text="Update Table" textFill="WHITE">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <ImageView fitHeight="117.0" fitWidth="135.0" layoutX="48.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@remove-user.png" />
            </image>
        </ImageView>
      <TextField fx:id="firstnameField" layoutX="213.0" layoutY="281.0" />
      <TextField fx:id="lastnameField" layoutX="213.0" layoutY="338.0" />
      <TextField fx:id="usernameField" layoutX="484.0" layoutY="281.0" />
      <TextField fx:id="passwordField" layoutX="484.0" layoutY="338.0" />
      <Label fx:id="firstnameLabel" layoutX="213.0" layoutY="263.0" text="Enter new first name (optional)" />
      <Label fx:id="lastnameLabel" layoutX="213.0" layoutY="315.0" text="Enter new  last name (optional)" />
      <Label fx:id="usernameLabel" layoutX="484.0" layoutY="263.0" text="Enter new username(optional)" />
      <Label fx:id="passwordLabel" layoutX="484.0" layoutY="324.0" text="Enter new password (optional)" />
    </children>
</AnchorPane>
